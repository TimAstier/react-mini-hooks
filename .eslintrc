{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "plugin:react/recommended"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error"
  },
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jest/globals": true,
    "jest": true
  },
  "plugins": ["jest", "react-hooks"],
  "settings": {
    "react": {
      "version": "16.7.0-alpha.0"
    }
  }
}
